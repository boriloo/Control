rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /desktops/{desktopId} {
    
      function isOwner(data) {
        return request.auth.uid == data.ownerId;
      }

      function isValidPersonalDesktop(data) {
        return data.type == 'personal' &&
               data.members.size() == 1 &&
               data.members[0] == data.ownerId;
      }
  

      allow create: if request.auth != null && 
                      isOwner(request.resource.data) && 
                      isValidPersonalDesktop(request.resource.data);

      allow read, update, delete: if request.auth != null &&
                               (request.auth.uid in resource.data.members ||
                                request.auth.uid == resource.data.ownerId);
    }
  }
}
